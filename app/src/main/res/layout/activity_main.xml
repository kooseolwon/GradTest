<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.gradtest.Activity.MainActivity">
    <RelativeLayout
        android:id="@+id/all_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#60369C">
        <ImageButton
            android:layout_marginLeft="15dp"
            android:background="@drawable/logo_image"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/mypage_icon"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/logo_image"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="필터"
            android:layout_alignParentRight="true"
            android:id="@+id/filter_btn"
            />
        <Button
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글쓰기"
            android:id="@+id/writing_btn"
            android:layout_toLeftOf="@+id/filter_btn"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/all_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler">

        </android.support.v7.widget.RecyclerView>



    </RelativeLayout>

</RelativeLayout>
