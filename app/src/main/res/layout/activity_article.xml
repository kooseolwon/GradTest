<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout

        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#60369C">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/logo_image"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="꺄르륵"
            android:layout_alignParentRight="true"
            android:id="@+id/filter_btn"
            />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/personal_box"
        android:layout_below="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            />
        <TextView
            android:id="@+id/personal_NM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="ID:"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/personal_NM1"
            android:layout_toRightOf="@id/personal_NM"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="seolwonKoo"
            android:textSize="15sp"
            />

        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/story_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/personal_box"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/story_txt"
            android:text="seolwon"
            android:textSize="20sp"/>

    </RelativeLayout>>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/commentBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="댓글 보기"
            android:textSize="20pt"
            android:textAlignment="center"/>

    </RelativeLayout>



    </RelativeLayout>





