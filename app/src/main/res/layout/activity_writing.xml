<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/layout_w"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/board"
        android:layout_height="700dp"
        android:orientation="horizontal"
        android:layout_weight="6.44">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="제목을 입력하세요"
                android:inputType="none"
                android:maxLength="40"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                android:windowSoftInputMode="stateAlwaysHidden" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/btn_where"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="지역설정 함" />
                    <RadioButton

                        android:id="@+id/btn_where2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="지역설정 안함" />


            </RadioGroup>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"></Spinner>

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                </Spinner>



            </LinearLayout>


            <TextView
                android:id="@+id/where_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="글을 입력하세요"
                android:inputType="none"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                android:windowSoftInputMode="stateAlwaysHidden" />

            <TextView
                android:id="@+id/photo_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="[사진] : 첨부 파일 없음" />

            <TextView
                android:id="@+id/pin_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="[위치] : 위치 정보 없음" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/photoView"
                android:src="@drawable/jjang4"/>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.00">


        <ImageButton
            android:id="@+id/cam"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1.00"
            android:background="#00FFFFFF"
            android:onClick="onClick"
            android:paddingBottom="10dp"

            android:paddingLeft="10dp"

            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cam" />


        <ImageButton
            android:id="@+id/rec"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1.00"
            android:background="#00FFFFFF"


            android:paddingBottom="10dp"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/rec"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/pin"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1.00"
            android:background="#00FFFFFF"


            android:paddingBottom="10dp"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/pin"
            android:scaleType="fitCenter"/>


    </LinearLayout>


</LinearLayout>