<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/main_layout">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="15pt"
            android:id="@+id/name_txt" />
        <EditText
            android:layout_toRightOf="@+id/name_txt"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름을 입력해주세요."
            android:id="@+id/name_edittxt"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignLeft="@+id/text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_layout1"
        android:layout_below="@+id/text_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 주소"
            android:textSize="15pt"
            android:id="@+id/address_txt" />
        <EditText
            android:layout_toRightOf="@+id/address_txt"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름을 입력해주세요."
            android:id="@+id/addrees_edittxt"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/text_layout1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="찾기"
            android:id="@+id/find_btn"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:layout_toRightOf="@+id/find_btn"
            android:id="@+id/cancel_btn"/>

    </RelativeLayout>




</RelativeLayout>